<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface">

    <!-- Event poster -->
    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/event_poster"
        android:src="@drawable/bg_docker" />

    <!-- Event name -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="8dp" />

    <!-- Event date -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_date"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface" />

    <!-- Event description -->
    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_description"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="8dp" />

    <!-- Buttons: View Attendance + Move to Downloads -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewAttendanceButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_attendance"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/moveToDownloadsButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/move_to_downloads"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:textColor="?attr/colorOnPrimary" />
    </LinearLayout>

    <!-- Attendance list -->
    <LinearLayout
        android:id="@+id/rollListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp"
        android:background="@android:color/white" />
</LinearLayout>
